<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>base 测试用例</title>
<style>
/* reset */
*{margin:0; padding:0;border:0;}
img{border:0;vertical-align:middle;}
ul,ol,dl{list-style:none;}
body {font-size:12px; font-family:arial, "Microsoft YaHei", simsun; line-height:20px}
</style>
</head>

<body>
<script src="../../lib/zepto1.1.3.js"></script>
<script src="../../src/mo.js"></script>
<script src="../../src/base.js"></script>
<script>
mo.add('mo.Slide:mo.Base', function(){
		var _public = this;

		var _private = {};

		/**
		 * public static作用域
		 * @alias mo.Slide.
		 * @ignore
		 */
		var _static = this.constructor;


		_public.constructor = function(config){
			this.config = Zepto.extend(true, {}, _static.config, config); // 参数接收
			this.init();
		}

		_static.config = {
			degradation: 'base',
			animateTime: 300,
			radius: 20
		};

		_public.init = function(){
			// 自定义事件绑定
			this.effect && this.on(this.effect);
			this.config.event && this.on(this.config.event);
			
			this.trigger('init');


			// this.trigger('init') 
		}


})

var slide = new mo.Slide({
	event: {
		init: function(){
			alert('init!');
		}
	}
});



</script>

</body>
</html>
